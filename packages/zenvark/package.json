{
  "name": "zenvark",
  "version": "1.0.1",
  "description": "A distributed circuit breaker coordinated via Redis for high-availability applications",
  "keywords": [
    "zenvark",
    "circuit",
    "breaker",
    "circuit-breaker",
    "redis",
    "distributed"
  ],
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zenvark/zenvark.git",
    "directory": "packages/zenvark"
  },
  "homepage": "https://zenvark.github.io/zenvark",
  "bugs": {
    "url": "https://github.com/zenvark/zenvark/issues"
  },
  "engines": {
    "node": ">=22"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "docker:start": "docker compose up -d",
    "docker:stop": "docker compose down",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "typecheck": "tsc",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "pretest:ci": "npm run docker:start",
    "test:ci": "npm run test:coverage",
    "posttest:ci": "npm run docker:stop"
  },
  "devDependencies": {
    "@lokalise/tsconfig": "^3.0.0",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "rimraf": "^6.0.1",
    "typescript": "5.9.3",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@lokalise/node-core": "^14.1.0",
    "ioredis": "^5.8.1",
    "redis-semaphore": "^5.6.2"
  }
}
